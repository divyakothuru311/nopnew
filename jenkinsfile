pipeline{
    agent { label 'dotnet-sdk-7.0'}
    options {
         timeout(time: 30, unit: 'MINUTES')
    }
    tools {
        jdk 'JDK-17'
    }
    triggers {
        pollSCM('* * * * *') 
    }
    stages {
        stage('git vcs') {
            steps {
                git url: 'https://github.com/divyakothuru311/nopnew.git',
                    branch: 'develop'
            }
        }

        stage('build and package') {
            steps {
                rtDotnetResolver(
                    id: "DOTNET_RESOLVER",
                    serverId: "JFROG_NOP",
                    repo: "nop-nuget-local"
                )
            }
        }

        stage ('Exec build') {
            steps {
                rtDotnetRun (
                    resolverId: "DOTNET_RESOLVER",
                    args: "build src/NopCommerce.sln"
                )
            }
        }

        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "JFROG_NOP"
                )
            }
        }            
    }

}    
        
        